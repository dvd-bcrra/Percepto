<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/Background"
    tools:context=".Test_completed">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#35063e"
                android:id="@+id/txtFasedeestudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Prueba Finalizada"
                android:textSize="25sp"
                android:fontFamily="sans-serif-black"/>

            <ImageView
                android:id="@+id/imgFase1"
                android:layout_below="@+id/txtFasedeestudio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:adjustViewBounds="false"
                android:src="@drawable/test"/>

            <TextView
                android:id="@+id/txtInstrucciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgFase1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="15dp"
                android:textColor="@color/DarkPurple"
                android:textSize="15sp"
                android:text="Felicidades!"/>

            <TextView
                android:id="@+id/txtdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtInstrucciones"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="15dp"
                android:textColor="#222222"
                android:textSize="15sp"
                android:text="@string/Phase1Description"/>

            <Button
                android:tag="siguente"
                android:id="@+id/btnCompletedNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtdesc"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:text="Siguiente"
                android:textColor="#ffffff"
                android:onClick="btnCompletedNext_Click"
                android:background="@drawable/purple_custom_rounded_corners"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnCompletedBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Guardar Reporte"
            android:onClick="btnCompleted_click"
            android:background="@drawable/white_custom_rounded_corners"/>

        <Button
            android:id="@+id/btnReportSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="#00ffffff"
            android:textColor="#fff"
            android:onClick="btnReportSkip_Click"
            android:text="Regresar"/>
    </LinearLayout>
</LinearLayout>