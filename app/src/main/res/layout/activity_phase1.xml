<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    tools:context=".Phase1"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/txtNumPregunta"
        android:text="Pregunta 0"
        android:textColor="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textStyle="bold"
        android:paddingStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0">

                <TextView
                    android:id="@+id/txtSelecciona"
                    android:text="Selecciona una opcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/DarkPurple"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/txtContador"
                    android:text="contador"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSelecciona"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:padding="30dp"/>

                <TextView
                    android:id="@+id/txtWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ALEGRIA"
                    android:layout_below="@id/txtContador"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/DarkPurple"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:textSize="28sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:background="@drawable/light_purple_background"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llreacciones"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:padding="5dp"
                style="?android:buttonBarStyle"
                android:gravity="center|bottom">

                <ImageButton
                    android:onClick="btnScoreNext"
                    android:tag="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="0dp"
                    style="?android:buttonBarButtonStyle"
                    android:src="@drawable/ic_emoji1"/>

                <ImageButton
                    android:onClick="btnScoreNext"
                    android:tag="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="0dp"
                    style="?android:buttonBarButtonStyle"
                    android:src="@drawable/ic_emoji2"/>

                <ImageButton
                    android:onClick="btnScoreNext"
                    android:tag="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:scaleType="centerInside"
                    android:padding="0dp"
                    style="?android:buttonBarButtonStyle"
                    android:src="@drawable/ic_emoji3"/>

                <ImageButton
                    android:onClick="btnScoreNext"
                    android:tag="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:padding="0dp"
                    style="?android:buttonBarButtonStyle"
                    android:src="@drawable/ic_emoji4"/>

                <ImageButton
                    android:onClick="btnScoreNext"
                    android:tag="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:padding="0dp"
                    style="?android:buttonBarButtonStyle"
                    android:src="@drawable/ic_emoji5"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>